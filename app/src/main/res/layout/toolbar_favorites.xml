<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/FavoritesToolbarStyle">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/button_back"
            style="@style/ToolbarImageButtonStyle"
            android:layout_marginStart="@dimen/appbar_button_margin_start"
            android:src="@drawable/left_arrow"
            android:layout_gravity="start"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/toolbar_title"
            style="@style/FavoritesTitleTextViewStyle"
            android:layout_marginStart="@dimen/appbar_title_margin_start"
            android:text="@string/label_favorites"/>
    </androidx.appcompat.widget.Toolbar>
</layout>

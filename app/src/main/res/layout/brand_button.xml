<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/button_brand"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_brand_height"
        android:background="@drawable/item_profile_background"
        android:gravity="start"
        android:paddingStart="@dimen/button_brand_padding_start"
        android:paddingEnd="@dimen/button_brand_padding_end">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/brand_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAppearance="@style/BrandButtonTextStyle"
            tools:text="A `Pieu" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/arrow_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/right_arrow" />
    </LinearLayout>
</layout>
